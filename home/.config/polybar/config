[module/layout-xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad-layout-log
exec-if = [ -p /tmp/.xmonad-layout-log ]
tail = true
format = <label>
format-background = ${colors.neutral}
format-foreground = ${colors.foreground}
format-padding = 2
label = "%output%"

[settings]
screenchange-reload = true

