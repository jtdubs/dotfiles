format-discharging-foreground = ${colors.red}
format-discharging-background = ${colors.light-gray}
format-full = <label-full>
format-full-padding = 2
format-full-foreground = ${colors.dark-blue}
format-full-background = ${colors.light-gray}
label-charging = "⚡ %percentage%%"
label-discharging = %percentage%%
label-full = " FULL "

