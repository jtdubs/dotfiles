[colors]
background = #151718
foreground = #eeeeee
foreground-alt = #d6d6d6
# positive = #55b5db
positive = #3b758c
neutral = #41535b
warning = #db7b55
negative = #cd3f45

[bar/main]
monitor-strict = false

width = 100%
height = 22
radius = 0.0
fixed-center = false
bottom = false

background = "#3b758c"
foreground = ${colors.background}

border-size = 0
line-size = 0
line-color = #f00
padding = 0
module-margin = 0

font-0 = "Noto Sans Mono:size=12;3"
font-1 = "Noto Sans Symbols:size=12;3"
font-2 = "Noto Sans Symbols2:size=12;3"

modules-left = layout-xmonad date ewmh
modules-center = xwindow
modules-right = backlight pulseaudio battery0 battery1

tray-position = right
tray-padding = 32
tray-scale = 1.0
tray-background = ${colors.neutral}
tray-foreground = ${colors.foreground-alt}

[global/wm]
margin-top = 0
margin-bottom = 4

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = false
label-active = " %name% "
label-active-foreground = ${colors.background}
label-active-background = ${colors.positive}
label-occupied = " %name% "
label-occupied-foreground = ${colors.positive}
label-occupied-background = ${colors.background}
label-urgent = " %name% "
label-urgent-foreground = ${colors.negative}
label-urgent-background = ${colors.background}
label-empty = " %name% "
label-empty-foreground = ${colors.neutral}
label-empty-background = ${colors.background}

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
format-padding = 2
# label-foreground = ${colors.background}
# label-background = ${colors.positive}

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label> <bar>
format-padding = 2
format-background = ${colors.foreground-alt}
format-foreground = ${colors.background}
label = "BL"
bar-width = 10
bar-indicator = |
bar-indicator-foreground = ${colors.background}
bar-fill = ─
bar-fill-foreground = ${colors.positive}
bar-empty = ─
bar-empty-foreground = ${colors.background}

[module/date]
type = internal/date
interval = 1
date = "%Y-%m-%d"
date-alt = "%Y-%m-%d"
time = "%H:%M:%S"
time-alt = "%H:%M:%S"
format-prefix-foreground = ${colors.foreground-alt}
format-foreground = ${colors.background}
format-background = ${colors.foreground-alt}
format-padding = 2
# format-underline = ${colors.positive}
label = "%date% %time%"

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume> <bar-volume>
format-volume-padding = 2
format-volume-foreground = ${colors.background}
format-volume-background = ${colors.foreground-alt}
label-volume = VOL %percentage%%
label-volume-foreground = ${colors.background}
label-muted = muted
label-muted-foreground = ${colors.background}
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.background}
bar-volume-foreground-1 = ${colors.background}
bar-volume-foreground-2 = ${colors.positive}
bar-volume-foreground-3 = ${colors.positive}
bar-volume-foreground-4 = ${colors.positive}
bar-volume-foreground-5 = ${colors.warning}
bar-volume-foreground-6 = ${colors.negative}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-foreground = ${colors.background}
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = ${colors.background}
control-panel = pavucontrol

[module/battery0]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
format-charging = <label-charging>
format-charging-padding = 2
format-charging-foreground = ${colors.background}
format-charging-background = ${colors.foreground-alt}
format-discharging = <label-discharging>
format-discharging-padding = 2
format-discharging-foreground = ${colors.negative}
format-discharging-background = ${colors.foreground-alt}
format-full = <label-full>
format-full-padding = 2
format-full-foreground = ${colors.positive}
format-full-background = ${colors.foreground-alt}
label-charging = "⚡ %percentage%%"
label-discharging = %percentage%%
label-full = " FULL "

