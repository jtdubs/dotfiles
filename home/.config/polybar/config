[bar/main]
monitor-strict = false

width = 100%
height = 22
radius = 0.0
fixed-center = true
bottom = false

foreground = ${colors.theme00}
background = ${colors.theme0C}

border-size = 0
line-size = 0
line-color = #f00
padding = 0
module-margin = 0

font-0 = "Noto Sans Mono:size=12;3"
font-1 = "Noto Sans Symbols:size=12;3"
font-2 = "Noto Sans Symbols2:size=12;3"

modules-left = date battery0 battery1 ewmh
modules-center = xwindow
modules-right = pulseaudio backlight

tray-detached		= false
tray-position		= right
tray-offset-x		= 0
tray-offset-y		= 0
tray-maxsize		= 128
tray-padding		= 16
tray-scale		    = 1
tray-background 	= ${colors.theme04}

wm-restack = bspwm
override-redirect = true

[global/wm]
margin-top = 0
margin-bottom = 0

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = false
label-active = " %name% "
label-active-foreground = ${colors.theme00}
label-active-background = ${colors.theme0D}
label-occupied = " %name% "
label-occupied-foreground = ${colors.theme00}
label-occupied-background = ${colors.theme0C}
label-urgent = " %name% "
label-urgent-foreground = ${colors.theme00}
label-urgent-background = ${colors.theme00}
label-empty =
label-empty-foreground = ${colors.theme00}
label-empty-background = ${colors.theme0C}

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
format-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label> <bar>
format-padding = 2
format-foreground = ${colors.theme04}
format-background = ${colors.theme02}
label = "BL"
bar-width = 10
